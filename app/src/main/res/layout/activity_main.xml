<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spartatech.com.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/headerApps"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"/>

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Popular Movies"
        android:id="@+id/popularMoviesBtn"
        android:layout_below="@+id/headerApps"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onPopularMoviesClick" />

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Stock Hawk"
        android:id="@+id/stockHawkBtn"
        android:layout_below="@+id/popularMoviesBtn"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onStockHawkClick" />

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Build It Bigger"
        android:id="@+id/buildBiggerBtn"
        android:layout_below="@+id/stockHawkBtn"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onBuildItBiggerClick" />

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Make Your App Material"
        android:id="@+id/makeYourAppBtn"
        android:layout_below="@+id/buildBiggerBtn"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onMakeYourAppMaterialClick" />

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Go Ubiquitous"
        android:id="@+id/goUbiquitousBtn"
        android:layout_below="@+id/makeYourAppBtn"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onGoUbiquitousClick" />

    <Button
        style="@style/myAppPortfolioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Capstone"
        android:id="@+id/capstoneBtn"
        android:layout_below="@+id/goUbiquitousBtn"
        android:layout_alignLeft="@+id/headerApps"
        android:layout_alignStart="@+id/headerApps"
        android:layout_alignRight="@+id/headerApps"
        android:layout_alignEnd="@+id/headerApps"
        android:onClick="onCapstoneClick" />

</RelativeLayout>
